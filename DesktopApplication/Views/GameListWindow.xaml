<Window x:Class="BacklogManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BacklogManager"
        mc:Ignorable="d"
        Title="Backlog Manager"
        SizeToContent="WidthAndHeight"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        Margin="0">
  <Grid Margin="1">
    <Border x:Name="WindowBorder"
            BorderBrush="Black"
            BorderThickness="1"
            Height="Auto"
            Width="Auto"
            Margin="1,1">
      <StackPanel x:Name="WindowPanel"
                  Margin="5">
        <GroupBox x:Name="NextGameGroup"
                  Height="60"
                  Margin="0"
                  Header="Next Game">
          <StackPanel x:Name="NextGamePanel"
                      Margin="3,0"
                      Orientation="Horizontal">
            <TextBlock x:Name="NextGameText"
                       Text="Next game to play will be here"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Stretch"
                       Margin="0,7,10,0"
                       Width="495"
                       Padding="3,0,0,0"
                       FontSize="16"
                       Height="30" />
            <ComboBox x:Name="NextGameStatusCombo"
                      SelectedIndex="0"
                      Margin="10,7"
                      MaxWidth="122"
                      MaxHeight="23">
              <ComboBoxItem Content="Not Implemented" />
            </ComboBox>
            <Button x:Name="ChooseAgainButton"
                    Content="Choose Again"
                    Margin="10,7,0,7"
                    Height="23"
                    Width="83" />
          </StackPanel>
        </GroupBox>
        <GroupBox x:Name="GamesGroup"
                  Header="Games"
                  Margin="0"
                  Height="367">
          <StackPanel x:Name="GamesPanel"
                      Margin="3">
            <ListView x:Name="GameList">
              <ListView.View>
                <GridView>
                  <GridViewColumn Header="Title">
                    
                  </GridViewColumn>
                  <GridViewColumn Header="Platform">
                    
                  </GridViewColumn>
                  <GridViewColumn Header="Owned">

                  </GridViewColumn>
                  <GridViewColumn Header="Date Added">

                  </GridViewColumn>
                </GridView>
              </ListView.View>
            </ListView>
          </StackPanel>
        </GroupBox>
      </StackPanel>
    </Border>
  </Grid>
</Window>
